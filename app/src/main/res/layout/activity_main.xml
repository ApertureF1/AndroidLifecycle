<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <fragment
            android:id="@+id/my_nav_host_fragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:defaultNavHost="true"
            app:navGraph="@navigation/nav_graph" tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="16dp"/>
    <TextView
            android:layout_width="115dp"
            android:layout_height="51dp"
            android:id="@+id/message"
            app:layout_constraintTop_toTopOf="@+id/my_nav_host_fragment" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/my_nav_host_fragment"
            app:layout_constraintVertical_bias="0.133" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"/>

</android.support.constraint.ConstraintLayout>